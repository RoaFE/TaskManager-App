<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:background="?attr/colorPrimary"
    android:padding="8dp">

    <TextView
        android:id="@+id/goal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/colorOnPrimary"
        tools:text="ExampleName"
        android:layout_marginRight="8dp"/>


    <!--<ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/goal_name"
        android:layout_alignBottom="@id/goal_name"
        android:layout_toRightOf="@id/goal_name" />-->

    <TextView
        android:id="@+id/goal_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/goal_name"
        android:layout_alignBottom="@id/goal_name"
        android:layout_toRightOf="@id/goal_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/colorOnPrimary"
        tools:text="6000" />
    <TextView
        android:id="@+id/goal_target_steps_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/goal_name"
        android:layout_alignBottom="@id/goal_name"
        android:layout_toRightOf="@id/goal_target"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/colorOnPrimary"
        android:text="@string/steps_string"
        android:paddingLeft="4dp"/>

</RelativeLayout>