<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:background="?attr/colorPrimary"
    android:padding="8dp">

    <TextView
        android:id="@+id/task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/colorOnPrimary"
        tools:text="ExampleName"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/task_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/task_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/colorPrimaryVariant"
        tools:text="Description"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/task_feasibility_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/task_name"
        android:layout_alignBottom="@id/task_name"
        android:layout_toRightOf="@id/task_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/colorOnPrimary"
        tools:text="Feasibility:"
        android:layout_marginRight="2dp"/>

    <TextView
        android:id="@+id/task_feasibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/task_name"
        android:layout_alignBottom="@id/task_name"
        android:layout_toRightOf="@id/task_feasibility_text"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/colorOnPrimary"
        tools:text="2"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/task_priority_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/task_name"
        android:layout_alignBottom="@id/task_name"
        android:layout_toRightOf="@id/task_feasibility"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/colorOnPrimary"
        tools:text="Priority:"
        android:layout_marginRight="2dp"/>

    <TextView
        android:id="@+id/task_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/task_name"
        android:layout_alignBottom="@id/task_name"
        android:layout_toRightOf="@id/task_priority_text"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/colorOnPrimary"
        tools:text="2"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/task_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/task_name"
        android:layout_alignBottom="@id/task_name"
        android:layout_toRightOf="@id/task_priority"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginRight="2dp"
        android:textColor="?attr/colorOnPrimary"
        tools:text="Score:" />

    <TextView
        android:id="@+id/task_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/task_name"
        android:layout_alignBottom="@id/task_name"
        android:layout_toRightOf="@id/task_score_text"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/colorOnPrimary"
        tools:text="1" />
</RelativeLayout>